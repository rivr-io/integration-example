<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Onboarding example</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 px-3">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Onboarding</a>
    </nav>
</header>
<div class="align-items-center d-flex flex-column">
    @if (ViewBag.Snippet == null)
    {
        <!--Action that initiates onboarding and returns Snippet/Link-->
        <a asp-controller="Home" asp-action="CreateMerchant">Sign up</a>
    }
    else
    {
        <div class="col-12 col-md-6">
            @Html.Raw(ViewBag.Snippet)
        </div>
    }
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<!--Script is needed to use raw html and code injection-->
<script async defer type="text/javascript" src="https://test.rivr.io/api/scripts/PLATFORM_ID"></script>
</body>